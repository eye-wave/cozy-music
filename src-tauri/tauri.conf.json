{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "cozy-music",
	"version": "0.1.0",
	"identifier": "com.eyewave.cozy-music",
	"build": {
		"beforeDevCommand": "bun run dev:client",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "bun run build:client",
		"frontendDist": "../src-client/dist"
	},
	"app": {
		"windows": [
			{
				"title": "cozy-music",
				"width": 800,
				"height": 600,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
