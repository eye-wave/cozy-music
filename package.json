{
	"name": "cozy-music",
	"type": "module",
	"private": true,
	"workspaces": [
		"src-client"
	],
	"scripts": {
		"dev": "bunx tauri dev",
		"dev:client": "cd src-client && bun run dev",
		"build:client": "cd src-client && bun run build",
		"build": "bunx tauri build",
		"format": "cargo fmt -v && prettier . --write"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte",
			"prettier-plugin-tailwindcss",
			"@trivago/prettier-plugin-sort-imports"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"devDependencies": {
		"@tauri-apps/cli": "^2.9.2",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14"
	},
	"module": "index.ts",
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"src-client"
	]
}
